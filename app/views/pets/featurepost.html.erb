<%= form_with model: [@pet, @feature], url: pet_features_path(@pet)  do |f| %>
  
  <div>種類</div>
  <%= f.select :dog_or_cat, Feature.dog_or_cats.keys %>

  <div>色</div>
  <%= f.text_field :color %>
  
  <div>体重</div>
  <%= f.number_field :weight, min:0 %>kg
  
  <div>ペットの年齢</div>
  <%= f.number_field :pet_age %>歳
  
  <div>性別</div>
  <%= f.select :sex, Feature.sexes.keys %>

  <div>その他</div>
  <%= f.text_area :note %>
  
  

  <%= f.hidden_field :pet_id, value: @pet.id %>
 
<br>
  <%= f.submit "登録" %>
<% end %>
