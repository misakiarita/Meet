<%= form_with model: [@pet, @feature], url: pet_features_path(@pet)  do |f| %>
  
  <%= f.label :dog_or_cat %>
  <%= f.text_area :dog_or_cat %>

  <%= f.label :color %>
  <%= f.text_area :color %>
  
  <%= f.label :weight %>
  <%= f.text_area :weight %>
  
  <%= f.label :pet_age %>
  <%= f.text_area :pet_age %>
  
  <%= f.label :note %>
  <%= f.text_area :note %>
  
  <%= f.label :sex %>
  <%= f.text_area :sex %>

  <%= f.hidden_field :pet_id, value: @pet.id %>
 

  <%= f.submit "SEND" %>
<% end %>
