<div class="text_container">
<p id="notice"><%= notice %></p>
<% unless @pet.user_id == current_user.id %>

  <%= link_to 'この投稿のユーザーを評価する', new_evaluation_path(organization_user_id: @pet.user_id), method: :get %>
<% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(pet_id: @pet.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<br>
投稿者:<%= @user.name %>
  <% if @user.id != current_user.id %>
    <% if @conversation.present? %>
      <%= link_to 'メッセージ一覧へ', conversations_path %>
    <% else %>
      <div class="item">
        <%= link_to 'メッセージルームを送る', conversations_path(pet_id: @pet.id, member_ids: [current_user.id, @user.id]), method: :post, class: 'btn btn-primary' %>
      </div>
    <% end %>
  <% end %>

<p>
<% @pet.petpics.each do |pic| %>
  <% if pic.picture.present? %>  
    <%= image_tag(pic.picture.url) %>
  <% else %>
    <div>写真の投稿はありません</div>
    <% end %>
    <% end %>
    <br>
  <strong>名前:</strong>
  <%= @pet.pet_name %>
  <strong>譲渡地域:</strong>
  <%= @pet.pet_address %>
  <strong>譲渡年齢:</strong>
  <%= @pet.qualify_age %>
  <strong>ステータス:</strong>
  <%= @pet.status %>
  <strong>譲渡金額:</strong>
  <%= @pet.price %>円
  <br>
  <% if current_user.present? %>
    <% if current_user ==  @user%>
      <%= link_to '基本情報編集', edit_pet_path(@pet) %> 
    <% end %>
  <% end %>
  
</p>
<% @features.each do |feature| %>
  <strong>cat or dog:</strong>
  <%= feature.dog_or_cat %>
  <strong>color:</strong>
  <%= feature.color %>
  <strong>weight:</strong>
  <%= feature.weight %>kg
  <strong>Pet age:</strong>
  <%= feature.pet_age %>歳
  <strong>Pet sex:</strong>
  <%= feature.sex %>
  <br>
  <strong>概要:</strong>
  <%= feature.note %>
<% end %>
<br>
<% if current_user.present? %>
  <% if current_user ==  @user%>
    <%= link_to '詳細編集', edit_pet_feature_path(@features) %> 
  <% end %>
<% end %>
<br><br>
<% if current_user.present? %>
  <% if current_user ==  @user%>
    <td><%= link_to '削除', @pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
<% end %>
<br>
<%= link_to 'Back', pets_path %>

</div>