<p id="notice"><%= notice %></p>
<% unless @pet.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(pet_id: @pet.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<p>
  <strong>Pet name:</strong>
  <%= @pet.pet_name %>
  <strong>Pet address:</strong>
  <%= @pet.pet_address %>
  <strong>Pet age:</strong>
  <%= @pet.qualify_age %>
  <strong>Pet status:</strong>
  <%= @pet.status %>
  <strong>Pet price:</strong>
  <%= @pet.price %>
  <%= link_to 'Edit', edit_pet_path(@pet) %> 
</p>
<% @features.each do |feature| %>
  <strong>cat or dog:</strong>
  <%= feature.dog_or_cat %>
  <strong>color:</strong>
  <%= feature.color %>
  <strong>weight:</strong>
  <%= feature.weight %>
  <strong>Pet age:</strong>
  <%= feature.pet_age %>
  <strong>note:</strong>
  <%= feature.note %>
  <strong>Pet sex:</strong>
  <%= feature.sex %>
<% end %>
<%= link_to 'featureEdit', edit_pet_feature_path(@features) %> 
<%= link_to 'Back', pets_path %>

