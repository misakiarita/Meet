<p id="notice"><%= notice %></p>
<% unless @pet.user_id == current_user.id %>

  <%= link_to 'この投稿のユーザーを評価する', new_evaluation_path(organization_user_id: @pet.user_id), method: :get %>
<% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(pet_id: @pet.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<br>
書いた人:<%= @user.name %>
  <% if @user.id != current_user.id %>
    <% if @conversation.present? %>
      <%= link_to 'メッセージ一覧へ', conversations_path %>
    <% else %>
      <div class="item">
        <%= link_to 'メッセージルーム作成', conversations_path(pet_id: @pet.id, member_ids: [current_user.id, @user.id]), method: :post, class: 'btn btn-primary' %>
      </div>
    <% end %>
  <% end %>

<p>
  <strong>Pet name:</strong>
  <%= @pet.pet_name %>
  <strong>Pet address:</strong>
  <%= @pet.pet_address %>
  <strong>qualify age:</strong>
  <%= @pet.qualify_age %>
  <strong>Pet status:</strong>
  <%= @pet.status %>
  <strong>Pet price:</strong>
  <%= @pet.price %>
  <%= link_to '基本情報編集', edit_pet_path(@pet) %> 
</p>
<% @features.each do |feature| %>
  <strong>cat or dog:</strong>
  <%= feature.dog_or_cat %>
  <strong>color:</strong>
  <%= feature.color %>
  <strong>weight:</strong>
  <%= feature.weight %>
  <strong>Pet age:</strong>
  <%= feature.pet_age %>
  <strong>note:</strong>
  <%= feature.note %>
  <strong>Pet sex:</strong>
  <%= feature.sex %>
<% end %>
<%= link_to '詳細編集', edit_pet_feature_path(@features) %> 
<br>
<%= link_to 'Back', pets_path %>

