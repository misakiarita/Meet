<table class="table table-hover">
  <thead>
    <h2>メッセージ一覧</h2>
  </thead>
  <tbody>
    <% @conversations.each do |conversation| %>
      <td>
          <b>ペットの名前</b>
          <% @pet.each do |pet| %>
          <%= pet.pet_name %>
          <% end %>
          <%= link_to 'この案件のメッセージ', conversation_messages_path(conversation) %>
      </td>
    <% end %>
  </tbody>
</table>
