<div class="text_container">
<table class="table table-hover">
  <thead>
    <h2>メッセージ一覧</h2>
  </thead>
  <tbody>
    <% @conversations.each do |conversation| %>
          <b>ペットの名前</b>
          <%= Pet.find(conversation.pet_id).pet_name %>
          <br>
          <%= link_to 'この案件のメッセージ', conversation_messages_path(conversation) %>
          <br>
    <% end %>
  </tbody>
</table>
</div>
